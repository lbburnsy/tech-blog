<div class="card text-center">
  <div class="card-header">By {{user.name}}</div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">
      {{content}}
    </p>
  </div>
  <div class="card-footer text-muted">{{format_date date_created}}</div>
</div>

<div class="container">
  <h4>Recent Comments:</h2>
</div>

{{#each comments as |comment|}}
<div class="container">
  <div class="row comment-border">
    <div class="col-2">
      <p>By {{comment.user.name}}</p>
      <p>on {{format_date comment.date_created}}</p>
    </div>
    <div class="col-10">
      <p>
        {{comment.content}}
      </p>
    </div>
  </div>
</div>
{{/each}}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Write a comment on this post:</h3>

      <form class="form new-comment-form">
        <div class="form-group">
          <label for="post-content">Comment:</label>
          <textarea class="form-input" id="post-content" name="post-content"></textarea>
        </div>
        <div class="form-group">
          <button id='post_id' type="submit" class="btn btn-primary" value={{id}}>Post!</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/post.js"></script>