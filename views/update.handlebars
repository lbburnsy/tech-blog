{{!-- Form to update the post --}}
<div class="container">
    <div class="row">
        <div class="col-12">
            <p>Update your blog post:</p>
            <form class="form new-post-form">
                <div class="form-group">
                    <label for="post-name">Title:</label>
                    <input class="form-input" type="text" id="post-name" name="post-name" placeholder="{{title}}" />
                </div>
                <div class="form-group">
                    <label for="post-description">Description:</label>
                    <textarea class="form-input" id="post-description" name="post-content"
                        placeholder="{{description}}"></textarea>
                </div>
                <div class="form-group">
                    <label for="post-content">Content:</label>
                    <textarea class="form-input" id="post-content" name="post-content" placeholder="{{content}}"
                        data-id={{id}}></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="update-button">Update!</button>
                </div>
            </form>
        </div>
    </div>
</div>

{{!-- Displays the post that is getting updated --}}
<div class="container post-list">
    <div class="card text-center">
        <div class="card-header">By {{user.name}}</div>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">
                {{content}}
            </p>
        </div>
        <div class="card-footer text-muted">{{format_date date_created}}</div>
    </div>
</div>

<script src="/js/update.js"></script>